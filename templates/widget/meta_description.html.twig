{% if brand is defined %}
    <meta name="description" content="{{ get_description_brand_page(service_entity, brand) }}"/>
{% elseif model is defined %}
    <meta name="description" content="{{ get_description_model_page(service_entity, model) }}"/>
{% elseif is_simple_page(app.request.pathInfo) %}
    <meta name="description" content="{{ get_description_simple_page(app.request.pathInfo, service_entity) }}">
{% elseif brand is not defined %}
    <meta name="description" content="{{ get_description_basic_site() }}"/>
{% endif %}